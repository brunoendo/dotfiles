#!/bin/bash

# Get the diretory my dotfiles repo is in.
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ] ; do SOURCE="$(readlink "$SOURCE")"; done
DOTFILES_BIN_DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

cd $DOTFILES_BIN_DIR
cd ..
echo `pwd`
git pull
git submodule init
git submodule update
git submodule sync
cake update
